{
  "name": "@botfi/main-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack --port ${DEV_MAIN_PORT:-15000}",
    "build": "next build",
    "build:clean": "rm -rf .next && pnpm build",
    "start": "next start -p ${DEV_MAIN_PORT:-15000}",
    "lint": "next lint && pnpm typecheck && pnpm format:check",
    "format:check": "prettier --check \"**/*.{ts,tsx,md}\"",
    "format:write": "prettier --write \"**/*.{ts,tsx,md}\"",
    "typecheck": "tsc --noEmit",
    "i18n:parse": "i18next --config config/i18next-parser.ts"
  },
  "dependencies": {
    "@botfi/env": "workspace:*",
    "@botfi/ui": "workspace:*",
    "accept-language": "3.0.20",
    "i18next": "25.3.2",
    "i18next-browser-languagedetector": "8.2.0",
    "i18next-resources-to-backend": "1.2.1",
    "next": "15.4.3",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-i18next": "15.6.1",
    "server-only": "0.0.1",
    "translation-check": "1.1.1",
    "zod": "4.0.5"
  },
  "devDependencies": {
    "@botfi/eslint-config": "workspace:*",
    "@botfi/tsconfig": "workspace:*",
    "@types/node": "^22",
    "@types/react": "^19.1.0",
    "@types/react-dom": "^19.1.0",
    "i18next-parser": "^9.3.0",
    "typescript": "5.8.3"
  }
}
