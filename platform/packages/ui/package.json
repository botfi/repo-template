{
  "name": "@botfi/ui",
  "version": "0.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "format:check": "prettier --check \"**/*.{ts,tsx,md}\"",
    "format:write": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "eslint . --max-warnings 0",
    "postui:add": "pnpm format:write",
    "test:it": "echo '[packages/ui] No Integration Tests'",
    "test:unit": "echo 'vitest --config=config/unit.config.ts'",
    "typecheck": "tsc --noEmit",
    "ui:add": "shadcn add"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.1.1",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "2.1.15",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tooltip": "^1.2.7",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.525.0",
    "next-themes": "^0.4.6",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-hook-form": "^7.60.0",
    "sonner": "^2.0.6",
    "tailwind-merge": "^3.3.1",
    "tw-animate-css": "^1.3.5",
    "zod": "4.0.5"
  },
  "devDependencies": {
    "@botfi/eslint-config": "workspace:*",
    "@botfi/tsconfig": "workspace:*",
    "@tailwindcss/postcss": "^4.0.8",
    "@turbo/gen": "^2.4.2",
    "@types/node": "^22",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "shadcn": "2.9.2",
    "tailwindcss": "4.1.11",
    "typescript": "5.8.3"
  },
  "exports": {
    "./globals.css": "./src/styles/globals.css",
    "./postcss.config": "./postcss.config.mjs",
    "./utils": [
      "./src/utils/index.ts"
    ],
    "./utils/*": [
      "./src/utils/*.ts"
    ],
    "./lib/*": "./src/lib/*.tsx",
    "./components/*": "./src/components/*.tsx",
    "./hooks/*": "./src/hooks/*.ts"
  }
}