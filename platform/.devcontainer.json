{
  "name": "@botfi/repo-template.botfi.localhost",
  "dockerComposeFile": ["../compose.yml", "../.devcontainer/compose.yml"],
  "service": "platform",
  "runServices": ["platform", "pgsql"],
  "workspaceFolder": "/workspace/platform",
  "shutdownAction": "stopCompose",
  "customizations": {
    "vscode": {
      "extensions": [
        "esbenp.prettier-vscode",
        "Prisma.prisma",
        "johnpapa.vscode-peacock",
        "openai.chatgpt"
      ],
      "recommendations": [
        "joelday.docthis",
        "MS-vsliveshare.vsliveshare"
      ],
      "settings": {
        "editor.autoIndent": "advanced",
        "editor.links": true,
        "editor.rulers": [80, 120],
        "editor.tabSize": 2,
        "editor.detectIndentation": false,
        "editor.insertSpaces": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnPaste": false,
        "editor.formatOnSave": false,
        "prettier.semi": false,
        "prettier.singleQuote": true,
        "prettier.trailingComma": "es5",
        "prettier.printWidth": 80,
        "[typescript]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode"
        },
        "[typescriptreact]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode"
        },
        "[prisma]": {
          "editor.defaultFormatter": "Prisma.prisma"
        },
        "search.exclude": {
          "**/node_modules/**/*": true,
          "**/.next/**/*": true,
          "**/.turbo/**/*": true,
          "**/tmp": true,
          "**/storybook-static": true,
          "**/.vercel": true,
          "**/.apps": true,
          "**/.packages": true
        },
        "files.watcherExclude": {
          "**/.git/objects/**": true,
          "**/.git/subtree-cache/**": true,
          "**/node_modules/*/**": true,
          "**/.next/**/*": true,
          "**/.turbo/**/*": true,
          "**/dist/**/*": true,
          "**/tmp": true,
          "**/*.swp": true,
          "**/storybook-static": true,
          "**/.vercel": true,
          "**/.apps": true,
          "**/.packages": true
        },
        "files.exclude": {
          "**/.git": true,
          "**/.DS_Store": true,
          "**/node_modules": true,
          "**/.next": true,
          "**/.turbo": true,
          "**/.vscode": true,
          "**/.eslintrc*": true,
          "**/.gitignore": true,
          "**/.prettier*": true,
          "**/.editorconfig": true,
          "**/.yarnrc*": true,
          "**/.npmrc*": true,
          "**/.env": true,
          "**/.env.local": true,
          "**/.devcontainer*": true,
          "**/.yarn": true,
          "**/tmp": true,
          ".firebaserc": true,
          "pnpm-*.yaml": true,
          "**/next-env.d.ts": true,
          "**/.apps": true,
          "**/.packages": true
        },
        "workbench.colorCustomizations": {
          "activityBar.activeBackground": "#71b38f",
          "activityBar.background": "#71b38f",
          "activityBar.foreground": "#15202b",
          "activityBar.inactiveForeground": "#15202b99",
          "activityBarBadge.background": "#efeaf4",
          "activityBarBadge.foreground": "#15202b",
          "commandCenter.border": "#15202b99",
          "sash.hoverBorder": "#71b38f",
          "statusBar.background": "#549d75",
          "statusBar.foreground": "#15202b",
          "statusBarItem.hoverBackground": "#427c5c",
          "statusBarItem.remoteBackground": "#549d75",
          "statusBarItem.remoteForeground": "#15202b",
          "titleBar.activeBackground": "#549d75",
          "titleBar.activeForeground": "#15202b",
          "titleBar.inactiveBackground": "#549d7599",
          "titleBar.inactiveForeground": "#15202b99"
        },
        "peacock.remoteColor": "#549d75",
        "peacock.color": "#549d75"
      }
    }
  }
}
